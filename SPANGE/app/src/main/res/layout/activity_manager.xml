<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_manager"
    android:id="@+id/activity_manager_id"
    tools:context=".ManagerActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manager_activity_go_back_button"
        android:src="@drawable/button_undo"
        android:background="@android:color/transparent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toTopOf="@+id/manager_activity_scrollview"
        app:layout_constraintEnd_toEndOf="parent"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:id="@+id/manager_activity_scrollview"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/manager_screen_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- row0 -->
            <LinearLayout
                android:id="@+id/manager_activity_grid_layout_row0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/blank_fill_accepted">

                <!-- reference: (https://codeman77.tistory.com/54) -->
                <TextView
                    android:id="@+id/manager_activity_grid_layout_row0_text"
                    android:textColor="@color/textColor_darkGray"
                    android:text="사용자 이름"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_width="125sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mark_me"
                    android:layout_marginEnd="30dp"
                    android:contentDescription="mark me - row0" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_img_button_row0"
                    android:src="@drawable/button_accepted"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="button accepted - row0" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_exit_button_row0"
                    android:src="@drawable/button_exit"
                    android:background="@android:color/transparent"
                    android:contentDescription="button exit - row0" />
            </LinearLayout>

            <!-- row1 -->
            <LinearLayout
                android:id="@+id/manager_activity_grid_layout_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/blank_fill_accepted">
                <TextView
                    android:id="@+id/manager_activity_grid_layout_row1_text"
                    android:textColor="@color/textColor_darkGray"
                    android:text="사용자 이름"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_width="125sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_img_button_row1"
                    android:src="@drawable/button_accepted"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="button accepted - row1" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_exit_button_row1"
                    android:src="@drawable/button_exit"
                    android:background="@android:color/transparent"
                    android:contentDescription="button exit - row1" />
            </LinearLayout>

            <!-- row2 -->
            <LinearLayout
                android:id="@+id/manager_activity_grid_layout_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/blank_fill_accepted">
                <TextView
                    android:id="@+id/manager_activity_grid_layout_row2_text"
                    android:textColor="@color/textColor_darkGray"
                    android:text="사용자 이름"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_width="125sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_img_button_row2"
                    android:src="@drawable/button_accepted"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="button accepted - row2" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_exit_button_row2"
                    android:src="@drawable/button_exit"
                    android:background="@android:color/transparent"
                    android:contentDescription="button exit - row2" />
            </LinearLayout>

            <!-- row3 -->
            <LinearLayout
                android:id="@+id/manager_activity_grid_layout_row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/blank_fill_accepted">
                <TextView
                    android:id="@+id/manager_activity_grid_layout_row3_text"
                    android:textColor="@color/textColor_darkGray"
                    android:text="사용자 이름"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_width="125sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_img_button_row3"
                    android:src="@drawable/button_accepted"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="button accepted - row3" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_exit_button_row3"
                    android:src="@drawable/button_exit"
                    android:background="@android:color/transparent"
                    android:contentDescription="button exit - row3" />
            </LinearLayout>

            <!-- row4 -->
            <LinearLayout
                android:id="@+id/manager_activity_grid_layout_row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/blank_fill_accepted">
                <TextView
                    android:id="@+id/manager_activity_grid_layout_row4_text"
                    android:textColor="@color/textColor_darkGray"
                    android:text="사용자 이름"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_width="125sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_img_button_row4"
                    android:src="@drawable/button_accepted"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="button accepted - row4" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manager_activity_exit_button_row4"
                    android:src="@drawable/button_exit"
                    android:background="@android:color/transparent"
                    android:contentDescription="button exit - row4" />
            </LinearLayout>

        </GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
