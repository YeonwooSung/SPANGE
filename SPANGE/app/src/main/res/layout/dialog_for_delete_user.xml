<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="300dp"
    android:layout_height="320dp"

    android:maxHeight="320dp"
    android:minHeight="320dp"
    android:maxWidth="300dp"
    android:minWidth="300dp"

    android:layout_gravity="center_horizontal"
    android:foregroundGravity="center_horizontal"

    android:id="@+id/dialog_delete_user"
    android:background="@drawable/delete_popup_background">

    <TextView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:id="@+id/delete_user_text_view"
        android:text="@string/delete_user_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textColor_darkGray"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintBottom_toTopOf="@id/map_popup_button_container"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_popup_button_container"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/map_popup_button_no"
            android:id="@+id/delete_user_button_no"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/delete_user_button_yes"
            android:background="@drawable/map_popup_button_yes"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>